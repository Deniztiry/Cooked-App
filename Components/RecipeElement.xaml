<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Cooked_App.Components.RecipeElement">
    <VerticalStackLayout Padding="10" Spacing="10" BackgroundColor="#13181C">
        <Frame CornerRadius="10" HasShadow="False" Padding="0">
            <Image Source="{Binding ImageUrl}" HeightRequest="170" Aspect="AspectFill" />
        </Frame>
        <Label Text="{Binding Title}" FontSize="16" TextColor="#FFFFFF" HorizontalOptions="Center">
            <Label.Triggers>
                <DataTrigger TargetType="Label" Binding="{Binding Title}" Value="Rezept 7">
                    <Setter Property="TextColor" Value="Red"/>
                </DataTrigger>
            </Label.Triggers>
        </Label>
    </VerticalStackLayout>
</ContentView>
